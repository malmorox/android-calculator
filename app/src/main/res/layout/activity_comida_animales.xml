<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingVertical="16dp"
    android:paddingHorizontal="16dp"
    tools:context="app.comida.ComidaActivity"
    android:background="@color/comidas_animales_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/comidas_animales_cardview">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/comidas_animales_text"
                    android:text="@string/dog"
                    android:textSize="30dp"
                    android:textAlignment="center" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:src="@drawable/dog"
                    app:tint="@color/comidas_animales_icon" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="15dp"
            android:layout_height="match_parent" />


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/comidas_animales_cardview">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/comidas_animales_text"
                    android:text="@string/cat"
                    android:textSize="30dp"
                    android:textAlignment="center" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:src="@drawable/cat"
                    app:tint="@color/comidas_animales_icon" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/comidas_animales_containers">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
             >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PESO"
                android:textSize="25dp"
                android:textAlignment="center"
                android:padding="5dp"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="kg"
                android:textSize="25dp"
                android:textAlignment="center"
                android:textColor="@color/white"/>

            <SeekBar
                android:id="@+id/seekBarComida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="50"
                android:padding="20dp"
                android:progressTint="@color/comidas_animales_button"
                android:thumbTint="@color/comidas_animales_button"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/comidas_animales_containers">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:text="EDAD"
                android:textColor="@color/comidas_animales_text"
                android:textAlignment="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:text="0 años"
                android:textColor="@color/comidas_animales_text"
                android:textAlignment="center"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnRestarEdad"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/comidas_animales_button"
                    android:text="−"
                    android:textSize="30sp"/>
                
                <Space
                    android:layout_width="20dp"
                    android:layout_height="0dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSumarEdad"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/comidas_animales_button"
                    android:text="+"
                    android:textSize="23sp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/comidas_animales_containers">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PESO DE LA COMIDA"
                android:textAlignment="center"
                android:paddingVertical="20dp"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Hola"
                android:textSize="25dp"
                android:textAlignment="center"
                android:textColor="@color/white" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>